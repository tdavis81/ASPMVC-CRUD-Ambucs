
@{
    ViewBag.Title = "EditUser";
}

<h2>Add User</h2>

@using (Html.BeginForm("UpdateUserInDB", "Admin", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2 style="margin-top:2%">Edit User</h2>
            <input type="hidden" id="id" name="id" value="@ViewBag.User.id" />
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h4>User Name*</h4>
            <input type="text" name="username" class="form-control" id="username" value="@ViewBag.User.username" required autofocus>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h4>User Type*</h4>
            @Html.DropDownList("utype", new SelectList(ViewBag.Roles, "user_role_id", "description", ViewBag.User.user_role), new { @class = "form-control", name = "utype" })
        </div>
    </div>
    <br />
    <div class="row" style="padding-top: 1rem">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <button type="submit" class="btn btn-success"><i class="fas fa-save"></i>Update</button>
        </div>
    </div>
}

