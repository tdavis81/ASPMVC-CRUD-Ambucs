
@{
    ViewBag.Title = "AddUser";
}

<h2>Add User</h2>

@using (Html.BeginForm("AddUserToDB", "Admin", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2 style="margin-top:2%">Add User</h2>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h4>User Name*</h4>
            <input type="text" name="username" class="form-control" id="username" placeholder="you@example.com" required autofocus>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h4>User Type*</h4>
            @Html.DropDownList("utype", new SelectList(ViewBag.Roles, "user_role_id", "description"), new { @class = "form-control", name = "utype" })
        </div>
    </div>
     <br />
    <div class="row" style="padding-top: 1rem">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save</button>
        </div>
    </div>
}